<div class = 'field'>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
</div>

<div class = 'field'>
  <%= f.label :body %>
  <br>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book' %>

<% end %>