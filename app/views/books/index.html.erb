<h1>Books</h1>

<table class="teble">
  <thead>
    <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class='newbook'>
<h2>New book</h2>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:'/books', methot: :post do |f| %>

<div class = 'field'>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class = 'field'>
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
  <%= f.submit 'Create Book' %>

<% end %>
